{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "vite/client"],
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
